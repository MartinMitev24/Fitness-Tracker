@model EditExerciseFormModel

@{
	ViewBag.Title = "Edit exercise " + Model.ExerciseName;
}

<div class="container">
	<div class="text-center">
		<h2>@ViewBag.Title</h2>
	</div>
	<hr />
	<form method="post">
		<div class="row">
			<div class="col">
				<div class="form-group">
					<label asp-for="ExerciseName"></label>
					<input asp-for="ExerciseName" class="form-control" type="text" value="@Model.ExerciseName" readonly>
				</div>
				<div class="form-group mb-4" style="height: 200px">
					<label asp-for="ExerciseDescription"></label>
					<textarea asp-for="ExerciseDescription" class="form-control" type="text" value="@Model.ExerciseDescription" readonly style="height: 100%"></textarea>
				</div>
				<div class="form-group">
					<label asp-for="TargetMuscleGroup"></label>
					<input asp-for="TargetMuscleGroup" class="form-control" type="text" value="@Model.TargetMuscleGroup" readonly>
				</div>
				<div class="form-group visually-hidden">
					<label asp-for="Id"></label>
					<input asp-for="Id" class="form-control" type="text" rows="3" value="@Model.Id" readonly>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col">
				<div class="form-group">
					<label asp-for="ExerciseNewName"></label>
					<input asp-for="ExerciseNewName" class="form-control" type="text" placeholder="ExerciseNewName">
					<span asp-validation-for="ExerciseNewName" class="text-danger"></span>
				</div>
				<div class="form-group mb-4" style="height: 200px">
					<label asp-for="ExerciseNewDescription"></label>
					<textarea asp-for="ExerciseNewDescription" class="form-control" type="text" placeholder="ExerciseNewDescription" style="height: 100%"></textarea>
					<span asp-validation-for="ExerciseNewDescription" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="NewTargetMuscleGroup"></label>
					<select asp-for="NewTargetMuscleGroup" class="form-select">
						@foreach (var item in Enum.GetNames(typeof(TargetMuscleGroup)))
						{
							<option value="@item">@item.ToString()</option>
						}
					</select>
				</div>
			</div>
		</div>
		<div></div>
		<hr />
		<div></div>
		<div>
			<div class="d-grid gap-5 d-md-flex justify-content-md-center">
				<input class="btn btn-danger btn-outline-dark btn-toolbar" type="submit" value="Save changes" />
			</div>
		<div />
	</form>
</div>

@section Scripts {
	<partial-name ="_ValidationScriptsPartial" />
}