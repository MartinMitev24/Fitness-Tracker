@model AddExerciseFormModel

@{
	ViewBag.Title = "Add new exercise.";
}

<div class="container">
	<div class="text-center">
		<h2>@ViewBag.Title</h2>
	</div>
	<hr />
	<form method="post">
		<div class="row">
			<div class="col">
				<div class="form-group">
					<label asp-for="ExerciseName"></label>
					<input asp-for="ExerciseName" class="form-control" type="text" placeholder="Exercise Name">
					<span asp-validation-for="ExerciseName" class="text-danger"></span>
				</div>
				<div class="form-group mb-4" style="min-height: 200px">
					<label asp-for="Description"></label>
					<textarea asp-for="Description" class="form-control" type="text" placeholder="Exercise Description" style="min-height: inherit"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="TargetMuscleGroup"></label>
					<select asp-for="TargetMuscleGroup" class="form-select">
						@foreach (var item in Enum.GetNames(typeof(TargetMuscleGroup)))
						{
							<option value="@item">@item.ToString()</option>
						}
					</select>
				</div>
				<div>
					<div class="form-grop">
						<label asp-for="ImageUrl"></label>
						<input asp-for="ImageUrl" class="form-control" type="text" placeholder="Image Url">
						<span asp-validation-for="ImageUrl" class="text-danger"></span>
					</div>
				</div>
			</div>
		</div>
		<div></div>
		<hr />
		<div></div>
		<div>
			<div class="d-grid gap-5 d-md-flex justify-content-md-center">
				<input class="btn btn-danger btn-outline-dark btn-toolbar" type="submit" value="Create exercise" />
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial"/>
}