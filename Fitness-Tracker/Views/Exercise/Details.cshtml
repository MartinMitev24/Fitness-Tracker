@using Fitness_Tracker.Infrastructure.Data.Models
@model ExerciseViewModel

@{
    ViewBag.Title = Model.ExerciseName;
}
<div class="container text-center">
    <div class="container text-center">
        <div class="row row-cols-3">
            <div class="col-3"></div>
            <div class="col-6">
                <h2 class="text-center col">@ViewBag.Title</h2>
            </div>
            <div class="col-3">
                <a class="btn btn-outline-dark bg-warning bg-opacity-75" asp-controller="Exercise" asp-action="Edit" asp-route-id="@Model.Id" asp-route-information="">Request Edit</a>
            </div>
        </div>
        <hr />
    </div>

    <div class="clearfix">
        <div class="col-4 float-end">
            <svg class="object-fit-cover border rounded" width="100%" height="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image" preserveAspectRatio="xMidYMid slice" focusable="false">
                <title>Placeholder</title>
                <rect width="100%" height="100%" fill="#868e96"></rect>
                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image</text>
            </svg>
        </div>
        <p class="text-md-start">@Model.ExerciseDescription</p>
    </div>
</div>